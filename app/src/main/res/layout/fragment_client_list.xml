<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/project_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.theagencyapp.world.Fragments.ProjectFragment">

    <ProgressBar
        android:id="@+id/progressBarClients"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_anchor="@+id/clients_list"
        app:layout_anchorGravity="top|center" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/clients_list"
        android:layout_width="360dp"
        android:layout_height="510dp"
        tools:listitem="@layout/client_row" />

</android.support.design.widget.CoordinatorLayout>







